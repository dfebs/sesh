<p><%= Current.user.email_address %><p>
<%= render "workout_sessions/form", workout_session: WorkoutSession.new %>

<h1>Upcoming Sessions</h1>
<%= render "workout_sessions/session_cards", group_id: "upcoming", workout_sessions: @workout_sessions.filter { |session| !session.completed? } %>

<h1>Completed Sessions</h1>
<%= render "workout_sessions/session_cards", group_id: "completed", workout_sessions: @workout_sessions.filter { |session| session.completed? } %>
