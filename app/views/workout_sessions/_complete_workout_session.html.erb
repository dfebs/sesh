<div class="complete-workout-session" id="<%= dom_id(workout_session, :complete) %>">
  <% if workout_session.completed? %>
    <p>Session completed on <%= workout_session.date_completed.in_time_zone(Current.user.time_zone).strftime("%a, %b %-d %Y") %></p>
  <% else %>
    <h2>Complete Session</h2>
    <% if workout_session.ready_for_completion? %>
      <%= render "workout_sessions/complete_workout_session_form", workout_session: workout_session %>
    <% else %>
      <p>This workout session is not ready for completion. Be sure to have at least 1 workout instance. All workout instances must have at least one set.</p>
    <% end %>
  <% end %>
</div>
