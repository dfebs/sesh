<div class="session-card" id="<%= dom_id(workout_session, :card) %>">
  <div class="session-card-top">
    <%= link_to workout_session.title, workout_session_path(workout_session) %>
  </div>

  <ul class="session-card-workouts">
    <% workout_session.workout_instances.limit(6).each do |instance| %>
      <li>
        <%= instance.name %>
      </li>
    <% end %>

    <li>
      <% if workout_session.workout_instances.length > 6 %>
        ... and <%= workout_session.workout_instances.length - 6 %> more
      <% end %>
    </li>
  </ul>
  <div class="session-card-bottom">
    <%= button_to duplicate_workout_session_path(workout_session), method: :post, class: "basic-card-button" do %>
      <%= render "icons/duplicate" %>
    <% end %>
    <%= button_to workout_session_path(workout_session), method: :delete, class: "red-button" do %>
      <%= render "icons/delete" %>
    <% end %>
    <% if workout_session.completed? %>
      <% if workout_session.date_completed == Date.today %>
        <em style="color: var(--color-notice)">&#10003; Completed Today!</em>
      <% else %>
        <em>&#10003; <%= workout_session.date_completed.strftime("%a, %b %-d %Y") %></em>
      <% end %>
    <% end %>
  </div>
</div>
