<li id="<%= dom_id(workout_set, :list_item) %>">
  <%= turbo_frame_tag combined_dom_id(workout_set.workout_instance, workout_set) do %>
      <%= workout_set.reps %> rep(s) of <%= workout_set.amount %> <%= workout_set.preferred_unit %>
      <div class="workout-set-controls">
        <% if !workout_set.workout_session.completed? %>
          <%= button_to workout_set_path(workout_set), method: :delete, class: "red-button" do %>
            <%= render "icons/delete" %>
            <span>Delete</span>
          <% end %>
          <%= link_to edit_workout_set_path(workout_set), class: "basic-button" do %>
            <%= render "icons/edit" %>
            <span>Edit</span>
          <% end %>
          <%= button_to [:duplicate, workout_set], method: :post, params: { id: workout_set.id }, class: "basic-button" do %>
            <%= render "icons/duplicate" %>
            <span>Duplicate</span>
          <% end %>
        <% end %>
      </div>
  <% end %>
</li>
