<%= form_with model: workout do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>

  <%= form.label :description %>
  <%= form.text_field :description, required: true %>

  <%= form.label :workout_type, "Workout Type" %>
  <%= form.select :workout_type, Constants::WORKOUT_TYPES %>

  <% Tag.all.each do |tag| %>
    <%= checkbox_tag "tag_ids[]", tag.id %>
    <%= label_tag tag.title %>
  <% end %>
 
  <%= form.submit %>
<% end %>
