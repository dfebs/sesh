<%= turbo_frame_tag combined_dom_id(workout_session, WorkoutInstance.new) do %>
  <%= form_with model: [workout_session, workout_instance] do |form| %>
    <%= form.label :workout_id, "Workout" %>
    <%= form.collection_select :workout_id, Current.user.workouts.order(name: :asc), :id, :name %>

    <%= form.submit class: "basic-button" %>
    <%= link_to "Cancel", workout_session_path(workout_session), class: "basic-button" %>
  <% end %>
<% end %>
